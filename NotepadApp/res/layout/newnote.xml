<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TableLayout
	    android:id="@+id/newnotelayout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="3dip"
	    android:stretchColumns="1" >
		<Button
			android:id="@+id/saveNewNote"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:drawableLeft="@drawable/save"
			android:text="Save" >
		</Button>
	</TableLayout>
	
	<TableLayout
		android:id="@+id/updatenotelayout"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="3dip"
		android:stretchColumns="2"
		android:visibility="gone" >

		<Button 
		    android:id="@+id/DeleteNote" android:drawableLeft="@drawable/delete"
			android:textSize="20sp" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		</Button>
		<Button
			android:id="@+id/UpdateNote"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:drawableLeft="@drawable/save"
			android:text="Update"
			android:textSize="20sp" >

			</Button>
	
	</TableLayout>
	<TextView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="Title"
	    android:textSize="18sp" />

	<TableLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:stretchColumns="0" >

	    <TableRow>

	        <EditText
	            android:id="@+id/NoteTitle"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="top" />

	        <FrameLayout>
	        </FrameLayout>
	    </TableRow>
	</TableLayout>
	<TextView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="Note"
	    android:textSize="18sp" />

	<LinearLayout 
	    android:layout_width="fill_parent" 
	    android:layout_height="fill_parent" 
	    android:layout_weight="2"
		android:orientation="horizontal">
		<EditText 
		    android:text="" 
		    android:gravity="top" 
		    android:id="@+id/NoteContent"
			android:singleLine="false" 
			android:layout_width="fill_parent"
			android:layout_weight="2"
			android:padding="10sp" 
			android:layout_height="fill_parent">
		</EditText>
	</LinearLayout>
	
	



</LinearLayout>
