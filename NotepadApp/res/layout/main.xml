<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--  -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip" 
        >

<!-- Note that some strings are Hardcoded. This is a styling thing. 
	Solution not found thus far. (extend picture?).
	String were put into string.xml where possible -->
	
        <Button
            android:id="@+id/addButton"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/add"
            android:text=" New Note" >
        </Button>

        <Button
            android:id="@+id/sortButton"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/export"
            android:text="@string/sort_note" />
    </LinearLayout>

    <!-- fill parent need this for the list to stay orientated -->
    <ScrollView
        android:id="@+id/listNotes"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" 
        android:layout_marginBottom="5dp"
        android:layout_marginTop="8dp"
        android:layout_weight="2"
        android:orientation="vertical" >

        <TableLayout android:id="@+id/notesList"
                     android:orientation="vertical" android:layout_width="fill_parent"
                     android:layout_height="wrap_content" android:stretchColumns="0"
                     android:padding="3dip">

        </TableLayout>

    </ScrollView>

</LinearLayout>


